# Copy this file to .env and adjust values.

# Database
POSTGRES_DB=ordering_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# API ports
API_DEV_PORT=8080
API_PROD_PORT=8081

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Connection string for API containers
CONNECTION_STRING=Host=db;Port=5432;Database=ordering_db;Username=postgres;Password=postgres

# JWT
JWT_ISSUER=Ordering.Api
JWT_AUDIENCE=Ordering.Client
JWT_SIGNING_KEY=change-this-super-secret-key-with-32+chars
JWT_ACCESS_TOKEN_MINUTES=60
JWT_REFRESH_TOKEN_DAYS=7

# Database startup behavior
DATABASE_RUN_MIGRATIONS_ON_STARTUP=true
